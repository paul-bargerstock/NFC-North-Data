<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Player Data Demo</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="https://kendo.cdn.telerik.com/2021.2.511/styles/kendo.common.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2021.2.511/styles/kendo.material.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://code.jquery.com/jquery-1.12.3.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2021.2.511/js/kendo.all.min.js"></script>
</head>
<body style="background-color: #111;">
    <div class="row" style="padding-bottom: 2em;">
        <div class="col-lg-12">
            <div style="width: 100%; height: 3em; background-color: #0076B6; color: white; text-shadow: 2px 2px 2px #000; font-family: 'Times New Roman', Times, serif; font-weight: bold; padding: 2em; display: flex; align-items: center; justify-content: center;">
                <h3>Demo - @ViewBag.Title</h3>
            </div>
        </div>
    </div>
    <div id="sidebar" style="position: fixed; top: 4em; background-color: #0076B6; color: white;"></div>
    @RenderBody()
</body>
</html>

<script type="text/javascript">
    $(document).ready(() => {
        $("#sidebar").kendoDrawer({
            template: "<ul> \
                            <li data-role='drawer-item'><a style='color: white;' class='k-icon k-i-myspace' href='@Url.Action("PlayerList", "Players")'></a></li> \
                            <li data-role='drawer-item'><a style='color: white;' class='k-icon k-i-user' href='@Url.Action("PlayerDetail", "Players")'></a></li> \
                          </ul>",
            mode: "push",
            mini: true,
            position: 'top',
            swipeToOpen: true
        });
    })
</script>