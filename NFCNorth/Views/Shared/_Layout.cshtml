<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Player Data Demo</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="https://kendo.cdn.telerik.com/2021.2.511/styles/kendo.common.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2021.2.511/styles/kendo.material.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://code.jquery.com/jquery-1.12.3.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2021.2.511/js/kendo.all.min.js"></script>
</head>
<body style="background-color: #ddd;">
    <div class="row">
        <div class="col-lg-10 offset-lg-1 col-sm-12">
            <div style="width: 100%; height: 3em; text-align: right; color: #0076B6; text-shadow: 1px 2px 1px 2px black; font-family: 'Times New Roman', Times, serif; font-style: italic; padding-bottom: 2em;">
                <h3>Demo - @ViewBag.Title</h3>
            </div>
        </div>
    </div>
    <div id="sidebar" style="position: fixed; background-color: #0076B6; color: white;"></div>
    @RenderBody()
</body>
</html>

<script type="text/javascript">
    $(document).ready(() => {
        $("#sidebar").kendoDrawer({
            template: "<ul> \
                            <li data-role='drawer-item' class='k-state-selected'><span class='k-icon k-i-inbox'></span><span class='k-item-text' data-id='Inbox'>Inbox</span></li> \
                            <li data-role='drawer-item'><span class='k-icon k-i-notification k-i-bell'></span><span class='k-item-text' data-id='Notifications'>Notifications</span></li> \
                          </ul>",
            mode: "push",
            mini: true,
            position: 'top',
            swipeToOpen: true
        });
    })
</script>